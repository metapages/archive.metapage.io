{
  "private": false,
  "name": "metapage-app",
  "version": "0.0.1",
  "homepage": "https://app.metapages.org/",
  "license": "MIT",
  "scripts": {
    "deploy": "gh-pages -d dist",
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve --port 4010",
    "dev": "preact watch --port 4010",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "per-env": "^1.0.2"
  },
  "dependencies": {
    "@metapages/metapage": "^0.5.7",
    "flexboxgrid": "^6.3.1",
    "gh-pages": "^3.1.0",
    "parcel-bundler": "^1.12.5",
    "preact": "^10.5.13",
    "siimple": "^3.3.1"
  },
  "browserslist": {
    "production": [
      "last 3 and_chr versions",
      "last 3 chrome versions",
      "last 3 opera versions",
      "last 3 ios_saf versions",
      "last 3 safari versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
